<Window x:Class="InteractiveRender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InteractiveRender"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10,10,10,10.5">
        <DockPanel LastChildFill="True">
            <DockPanel LastChildFill="True" DockPanel.Dock="Bottom">

                <Button x:Name="Stop" DockPanel.Dock="Right" Content="Stop" Click="Stop_Click"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                <Button x:Name="Save" DockPanel.Dock="Right" Content="Save" Click="Save_Click"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                <Label MinHeight="30" x:Name="Info" />
            </DockPanel>
            <Image x:Name="image" MinWidth="300" MinHeight="300" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        </DockPanel>
    </Grid>
</Window>
